<div class="container">
    {{> button href="/plan/add" btnclass="js-open-modal btn btn-secondary w-100 my-4" cta="Generate new Plan!"}}
</div>
{{#each plans}}
    <div class="plan-container container border-bottom position-relative">
        <div class="js-delete-plan" data-id="{{this._id}}">X</div>
        <h3>Plan für die nächsten {{this.duration}} Tage:</h3>
        <p>Von {{this.start}} bis {{this.end}}</p>

        <ul>
            {{#each this.recipes}}
                <li>
                    <div class="js-open-modal" data-id="{{this._id}}">
                        {{this.title}}
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
{{/each}}

<script src="./js/components/plan.js"></script>

<style>
    .delete-right {
        transform: scaleY(0);
        opacity: 1;
        overflow: hidden;
        transition: all 300ms ease-in-out;
    }

    .js-delete-plan {
        position: absolute;
        top: 10px;
        right: 10px;
        color: #f7996e;
    }
</style>

