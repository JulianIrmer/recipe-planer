<div class="row py-4 px-1 g-0 ">
    <div class="container mb-4">
        {{> button href="/recipes/add" linkclass="text-decoration-none" btnclass="btn btn-secondary w-100" cta="Add Recipe!"}}
    </div>

    {{#each recipes}}
        <div class="recipe-tile-container col-12 col-sm-6 col-md-4 col-lg-3 mb-4" data-id="{{this._id}}">
            {{> recipeTile recipe=this}}
        </div>
    {{/each}}
</div>

<script src="./js/components/recipe.js"></script>
<style>
    .delete-right {
        transform: scaleY(0);
        opacity: 1;
        overflow: hidden;
        transition: all 300ms ease-in-out;
    }
</style>

